common shared-properties
    default-language: Haskell2010
    ghc-options: -Wall -Werror -Wmissing-home-modules -Wredundant-constraints

library
  import:           shared-properties
  hs-source-dirs:   src
  exposed-modules:  Solver.Types, Solver.NNF, Solver.TableauSolver, Solver.Parser
  build-depends:    base ^>=4.17.2.1

executable descriptionLogicSolver
    import:           shared-properties
    hs-source-dirs:   app, test
    main-is:          Main.hs
    other-modules:    TypesSpec
    build-depends:    base ^>=4.17.2.1
                    , descriptionLogicSolver
                    , QuickCheck
                    , hspec
    default-language: Haskell2010

test-suite descriptionLogicSolver-test
  import:              shared-properties
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs 
  other-modules:       TypesSpec
  build-depends:       base
                     , descriptionLogicSolver
                     , QuickCheck
                     , hspec
    